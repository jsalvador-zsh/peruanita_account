<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Vista de formulario personalizada para facturas -->
        <record id="view_move_form_peruanita" model="ir.ui.view">
            <field name="name">account.move.form.peruanita</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form" />
            <field name="arch" type="xml">
                <xpath expr="//field[@name='invoice_date']" position="after">
                    <field name="month_out" placeholder="Mes de entrega" />
                </xpath>
                <!-- Personalizar el campo name para permitir edición manual -->
                <xpath expr="//field[@name='name']" position="replace">
                    <field name="name"
                        readonly="state in ['posted', 'cancel']"
                        placeholder="Dejar vacío para usar secuencia automática" />
                </xpath>

                <!-- Agregar campos personalizados después del campo name -->
                <xpath expr="//field[@name='l10n_latam_document_type_id']" position="after">
                    <field name="manual_name" widget="boolean_toggle" string="Nombre Manual" />
                    <field name="original_sequence_name" readonly="1"
                        string="Nombre Original de Secuencia"
                        invisible="not manual_name" />
                </xpath>
            </field>
        </record>

        <!-- Vista de lista personalizada para mostrar el estado del nombre -->
        <record id="view_move_list_peruanita" model="ir.ui.view">
            <field name="name">account.move.list.peruanita</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_tree" />
            <field name="arch" type="xml">
                <!-- Agregar columna para mostrar si es nombre manual -->
                <xpath expr="//field[@name='name']" position="after">
                    <field name="manual_name"
                        string="Manual"
                        widget="boolean_toggle"
                        optional="hide" />
                </xpath>
            </field>
        </record>
        <record id="view_move_list_peruanita_tree" model="ir.ui.view">
            <field name="name">account.move.list.peruanita.tree</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_invoice_tree" />
            <field name="arch" type="xml">
                <xpath expr="//field[@name='invoice_date']" position="after">
                    <field name="month_out" />
                </xpath>
            </field>
        </record>
        <!-- Acciones de menú personalizadas -->
        <record id="action_move_out_invoice_peruanita" model="ir.actions.act_window">
            <field name="name">Facturas de Cliente</field>
            <field name="res_model">account.move</field>
            <field name="view_mode">list,form,kanban</field>
            <field name="domain">[('move_type', '=', 'out_invoice')]</field>
            <field name="context">{'default_move_type': 'out_invoice'}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Crear una nueva factura de cliente
                </p>
                <p>
                    Las facturas de cliente se pueden crear con nombres de secuencia automáticos
                    o con nombres manuales para facturas antiguas.
                </p>
            </field>
        </record>

        <!-- Menú personalizado -->
        <menuitem id="menu_move_out_invoice_peruanita"
            name="Facturas de Cliente"
            parent="account.menu_finance_receivables"
            action="action_move_out_invoice_peruanita"
            sequence="10" />

    </data>
</odoo>